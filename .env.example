# Livestream Engagement Bot Configuration
# Make a copy of this file, rename it to .env, and adjust the values

# SMM City API Configuration
SMM_API_KEY=[YOUR_API_KEY]
SMM_API_URL=https://smmcity.com/api/v2

# Twitch Bot Configuration
TWITCH_BOT_USERNAME=your_bot_username
TWITCH_OAUTH_TOKEN=oauth:your_token_here
TWITCH_CHANNEL=your_channel_name
TWITCH_AUTO_BOOST_VIEWERS=false
TWITCH_AUTO_BOOST_QUANTITY=100
TWITCH_AUTO_BOOST_SERVICE_ID=2

# TikTok Configuration
TIKTOK_USERNAME=your_tiktok_username
TIKTOK_AUTO_BOOST_ENABLED=false
TIKTOK_AUTO_BOOST_VIEWERS=100
TIKTOK_AUTO_BOOST_SERVICE_ID=4

# Web Server Configuration
PORT=3000
WEB_ADMIN_USERNAME=admin
WEB_ADMIN_PASSWORD=changemeplease
SESSION_SECRET=your_random_secret_here

# Alert Settings
ALERT_LOW_BALANCE=10
ENABLE_EMAIL_ALERTS=false
ALERT_EMAIL=your_email@example.com

# Advanced Settings
LOG_LEVEL=info
ENABLE_DEBUG_MODE=false
AUTO_REFRESH_SERVICES=true